# ===============================
# ENVIRONMENT
# ===============================
APP_ENV=local
APP_NAME=agentic-ai-framework
LOG_LEVEL=INFO


# ===============================
# LLM CONFIGURATION
# ===============================
# Option 1: OpenAI (PoC / demo)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0


# Option 2: Enterprise / On-prem GenAI Gateway
# (uncomment and use instead of OpenAI)
# GENAI_PROVIDER=internal
# GENAI_GATEWAY_URL=https://genai-gateway.internal
# GENAI_API_KEY=your-internal-key
# GENAI_MODEL=foundation-model-v1


# ===============================
# AGENT CONFIG
# ===============================
DEFAULT_AGENT_CONFIG=agents/payment_agent.yaml
ENABLE_EXECUTION_TRACE=true
ENABLE_POLICY_ENFORCEMENT=true


# ===============================
# BANK SYSTEMS (AEM / APIs)
# ===============================
AEM_BASE_URL=https://aem.bank.internal
AEM_TIMEOUT_SECONDS=5

# Example credentials (use secrets manager in real env)
AEM_CLIENT_ID=sample-client-id
AEM_CLIENT_SECRET=sample-client-secret


# ===============================
# SECURITY & GOVERNANCE
# ===============================
ENABLE_PII_REDACTION=true
ENABLE_AUDIT_LOGGING=true
MAX_DAILY_TRANSACTION_AMOUNT=10000


# ===============================
# FEATURE FLAGS
# ===============================
ENABLE_DIGRESSION_DETECTION=true
ENABLE_REPLANNER=true
ENABLE_YAML_EXPORT=true


# ===============================
# DEVELOPMENT / TESTING
# ===============================
DEBUG_MODE=false
MOCK_AEM_CALLS=true
